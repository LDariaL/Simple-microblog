
<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
            <%= @user.name %>
            <%= gravatar_for @user %>
            </h1>
        </section>
    </aside>
    <div class="col-md-8">
        <% if @user.posts.any? %>
            <h3> Posts (<%= @user.posts.count %>)</h3>
            <ol class="posts">
              <% @posts.each do |post| %>
              <%= link_to post.title, post_path(post) %>
              <br/>
              <% end %>
            </ol>
            <%= will_paginate @posts %>
        <% end %>
    </div>            
</div>            