<h1>All posts</h1>
<h2>All categories</h2>
<div class="posts">
  <ul class="tree-menu">
    <% @post_categories.each do |category| %>
      <li><span></span><%= link_to category.title, post_category_path(category) %></li>
    <% end %>
  </ul>
</div>
<p>Random posts</p>
<div class="posts">
  <% @random_posts.each do |article| %>
    <%= link_to article.title, post_path(article) %></h5>
    <div class="post-meta">
      <span class="date"><i class="fa fa-calendar"></i> <%= article.created_at.to_date %></span>
    </div>
  <% end %>
</div>

    