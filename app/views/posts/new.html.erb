<%= form_with(model: @post, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="small_field">  
      <%= f.text_area :title, placeholder: "Title" %>
    </div>
    <div class="field">
      <%= f.text_area :content, placeholder: "Create new post" %>
    </div>  
    <select class="form-select">
      <%= f.select :post_category_title, options_for_select(@post_categories.collect { |post_category| [post_category.title, post_category.id] }),
                    { id: 'post_categories_select' }, {include_blank: 'no category'} %>
    </select>  
    <span class="image">
      <%= f.file_field :image %>
    </span>
      <%= f.submit "Create_new_post", class: "btn btn-primary" %>
<% end %>