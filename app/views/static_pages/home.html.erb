<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <p>Create a short post!</p>
      <%= render 'shared/post_form' %>
      </section>
    </aside>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Microblog</h1>
    <h2>
    This is the home page for the application for making short, frequent posts to a blog.
    </h2>
    <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
</div>            

<%= link_to image_tag("iconhash.png"), root_path, method: :get %> 
<% end %>